<!DOCTYPE html>
<html>
  <head>
    <title>FoodEh</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
  </head>



  <body>

    <header class='site-header'>
      <h1 class="logo">FoodEh</h1>
      <nav class="site-nav">
              <% if current_user %>
                Signed in as <%= current_user.first_name %>. <%= link_to "Logout", :logout, method: :post %> </br></br> |
                <%= link_to "Your Account", current_user %>
              <% else %>
                <%= link_to "Register", new_user_path %> |
                <%= link_to "Login", :login %></br></br>
              <% end %>
          </nav>
    </header>

  <% flash.each do |key, message| %>
    <div class="flash-<%= key %>"><%= message %></div>
  <% end %>

    <%= yield %>
    <%= console %>


  </body>
</html>
