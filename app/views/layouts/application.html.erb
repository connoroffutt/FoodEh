<!DOCTYPE html>
<html>
  <head>
    <title>FoodEh</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
  </head>



  <body>
    <nav class="site-nav">
      <% if current_user %>
      <p class="nav-text">Signed in as: <%= current_user.first_name %></p></br></br>
      <%= link_to "Logout", :logout, method: :post, class: "nav-button" %>
      <%= link_to "My Profile", user_path(current_user.id), class: "nav-button" %>
      <%= link_to "Recipe Search", recipes_path, class: "nav-button" %>
      <%= link_to "Cuisines", cuisines_path, class: "nav-button" %> </br></p>
      <% else %>
      <%= link_to "Register", new_user_path, class: "nav-button" %>
      <%= link_to "Login", :login, class: "nav-button" %></br></br>
      <% end %>
    </nav>

  <% flash.each do |key, message| %>
    <div class="flash-<%= key %>"><%= message %></div>
  <% end %>

    <%= yield %>
    <%= console %>


  </body>
</html>
