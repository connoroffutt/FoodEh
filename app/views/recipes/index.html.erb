<h1>Recipes</h1>
  <p>Search by Recipe or Ingredient</p>
<%= form_tag recipes_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>



<h1>Searching for - <%= @get_term %></h1>
<p>Powered By Food2Fork.com</p>
<% if (@recipes.nil? or @recipes == []) %>
<p> <h2>No recipes found... Please search again!</h2></p>
<% else %>

<table border="1">
 <tr>
 <th>Image</th>
 <th>Name</th>
 <th>Rank</th>
 <th>ID</th>
 </tr>
 <% @recipes.each do |course| %>
 <tr class=<%= cycle('even', 'odd') %>>
 <td><%= link_to(image_tag(course["image_url"], height: '100', width: '100'), course["f2f_url"])%></td>
 <!-- <td><#%= link_to(course["title"], course["f2f_url"]) %></td> -->


 <td><%= link_to(course["title"], course[""]) %></td>







 <td><%= course["social_rank"] %></td>
 <td><%= course["recipe_id"] %></td>
 <td><%= course["ingredients"] %></td>
 </tr>
 <% end %>
</table>
<% end %>
